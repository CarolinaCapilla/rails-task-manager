<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed == false %>
  <%= "This task is not completed yet"  %>
<% end %>
<br>

<%= link_to "Back", tasks_path %>
<%= link_to "Edit task", edit_path %>
<%= link_to "Delete task",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>